@page
@model WebApp.Pages.Ticket.IndexModel

@{
    ViewData["Title"] = "Index";
}
<style>
    .urgent {
        color: red;
    }
</style>

<h1>Active tickets</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].CreatedAtDt)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ticket[0].FinishedBy)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ticket) {
    if (!item.IsDone)
    {
        var timeDifference = (item.FinishedBy - DateTime.Now).TotalHours;
        var cssClass = timeDifference < 1 ? "urgent" : "";
        var shortDescription = item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description;
        <tr class="@cssClass">
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAtDt)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @shortDescription
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishedBy)
            </td>
            
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
    }
        
}
    </tbody>
</table>
